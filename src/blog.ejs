--- 
layout: layout/mylayout.ejs 
title: Blog 

pagination: 
  data: collections.blogPosts 
  size: 2
--- 

<div class="container my-5"> 
    <h1 class="display-1 text-center">Blog</h1> 
    <p class="lead text-center">My Work Showcase</p> 
</div> 

<div class="container" style="margin-left: 215px;" id="posts-container"> 
    <div class="row"> 
        <% pagination.items.forEach(post => { %> 
            <div class="col-md-4 mb-4"> 
                <div class="card shadow-sm" style="height: 350px;"> <!-- Set a fixed height for uniformity -->
                    <div class="card-body d-flex flex-column"> <!-- Use flexbox for better alignment -->
                        <h2 class="card-title" style="flex-grow: 1;"><%= post.title %></h2> 
                        <p class="card-text text-justify h-100 d-flex align-items-start"><%= post.description %></p> 
                        <p class="text-muted">Due Date: <%= post.due_date %></p> 
                    </div> 
                </div> 
            </div> 
        <% }); %> 
    </div> 
</div> 

<style> 
    body { 
        font-family: Arial, Helvetica, sans-serif; 
        background-color: white; 
    } 

    .card { 
        border: none; 
        background-color: lightblue; 
        overflow: hidden; /* Ensures no overflow of content */ 
    } 

    .card-title { 
        font-size: 1.25rem; 
        color: black;
    } 

    .card-text { 
        font-size: 1rem; 
        color: black;
    } 

    #posts-container { 
        margin-top: 30px; 
    } 
</style>
